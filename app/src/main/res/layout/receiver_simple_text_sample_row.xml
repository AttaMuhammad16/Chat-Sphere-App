<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:minWidth="@dimen/_130sdp"
            android:gravity="start"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/message_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/receiver_background"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/reference_Linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/white_bg_green_border"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/messageOwnerNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/baloo"
                            android:maxLines="3"
                            android:minWidth="@dimen/_80sdp"
                            android:text="Name"
                            android:textColor="#2542DD"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/refMessageLinear"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/documentImg"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:src="@drawable/file" />

                                <TextView
                                    android:id="@+id/referenceMessageTv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Good GoodGoodGood"
                                    android:textColor="@color/light_grey"
                                    android:textSize="@dimen/_11sdp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/photoLinear"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/refImgType"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:src="@drawable/photo" />

                                <TextView
                                    android:id="@+id/refType"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:minWidth="@dimen/_80sdp"
                                    android:text="photo"
                                    android:textColor="@color/light_grey"
                                    android:textSize="@dimen/_11sdp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/referenceImage"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="top"
                        android:padding="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/photo"
                        app:civ_border_color="@color/green"
                        app:civ_border_width="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:minWidth="@dimen/_80sdp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"
                    android:text="GoodGoodGoodGoo"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:text="01:01"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/feelingLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginTop="-4dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:gravity="start">

                <ImageView
                    android:id="@+id/likeImg"
                    android:layout_width="@dimen/feelingImageSize"
                    android:layout_height="@dimen/feelingImageSize"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:src="@drawable/ic_like" />

                <ImageView
                    android:id="@+id/heartImg"
                    android:layout_width="@dimen/feelingImageSize"
                    android:layout_height="@dimen/feelingImageSize"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_2sdp"
                    android:src="@drawable/ic_love" />

                <ImageView
                    android:id="@+id/surpriseImg"
                    android:layout_width="@dimen/feelingImageSize"
                    android:layout_height="@dimen/feelingImageSize"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_2sdp"
                    android:src="@drawable/surprise_img"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/happyImg"
                    android:layout_width="@dimen/feelingImageSize"
                    android:layout_height="@dimen/feelingImageSize"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_2sdp"
                    android:src="@drawable/ic_laugh" />

                <ImageView
                    android:id="@+id/angryImg"
                    android:layout_width="@dimen/feelingImageSize"
                    android:layout_height="@dimen/feelingImageSize"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_2sdp"
                    android:src="@drawable/ic_angry" />

                <TextView
                    android:id="@+id/countTv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="center|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>

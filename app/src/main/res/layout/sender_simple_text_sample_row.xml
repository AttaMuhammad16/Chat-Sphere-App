<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_5sdp"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:minWidth="@dimen/_130sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/message_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/sender_background"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reference_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:strokeColor="@color/light_green">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/messageOwnerNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/baloo"
                                android:maxLines="3"
                                android:minWidth="@dimen/_80sdp"
                                android:text="Name"
                                android:textColor="#2542DD"
                                android:textSize="@dimen/_11sdp" />

                            <LinearLayout
                                android:id="@+id/refMessageLinear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/documentImg"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:src="@drawable/file"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/referenceMessageTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:minWidth="@dimen/_80sdp"
                                    android:text="Good GoodGoodGood"
                                    android:textColor="@color/light_grey"
                                    android:textSize="@dimen/_11sdp"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/photoLinear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/refImgType"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="@dimen/_2sdp" />

                                <TextView
                                    android:id="@+id/refType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:minWidth="@dimen/_80sdp"
                                    android:text=""
                                    android:textColor="@color/light_grey"
                                    android:textSize="@dimen/_11sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/refImgCard"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:backgroundTint="@color/white"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/_18sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/ClearImgForImg"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/referenceImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/photo"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:minWidth="@dimen/_80sdp"
                    android:text="GoodGoodGoodGooasdfghadsfghgsfdghgdg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="01:01"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/feelingCard"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/feelingCardHeight"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="-6dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:backgroundTint="@android:color/transparent"
                android:outlineSpotShadowColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/_16sdp"
                android:visibility="invisible"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/likeImg"
                        android:layout_width="@dimen/feelingImageSize"
                        android:layout_height="@dimen/feelingImageSize"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:src="@drawable/ic_like" />

                    <ImageView
                        android:id="@+id/heartImg"
                        android:layout_width="@dimen/feelingImageSize"
                        android:layout_height="@dimen/feelingImageSize"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/ic_love" />

                    <ImageView
                        android:id="@+id/surpriseImg"
                        android:layout_width="@dimen/feelingImageSize"
                        android:layout_height="@dimen/feelingImageSize"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/surprise_img"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/happyImg"
                        android:layout_width="@dimen/feelingImageSize"
                        android:layout_height="@dimen/feelingImageSize"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/ic_laugh" />

                    <ImageView
                        android:id="@+id/angryImg"
                        android:layout_width="@dimen/feelingImageSize"
                        android:layout_height="@dimen/feelingImageSize"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/ic_angry" />

                    <TextView
                        android:id="@+id/countTv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="center|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearSender"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/sender_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/file"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/file_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minWidth="@dimen/_80sdp"
                    android:text="vudads666igmg.pdf"
                    android:textColor="#464747"
                    android:textSize="@dimen/_13sdp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/downloadImg"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/downloadImg"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:src="@drawable/baseline_file_download_24"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:elevation="@dimen/_10sdp"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:indeterminateTint="@color/cement"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/downloadImg"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/send_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="01:01 pm"
                android:textColor="#464747"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/feelingCard"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/feelingCardHeight"
        android:layout_marginTop="-6dp"
        android:visibility="invisible"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_gravity="center|center_vertical"
                android:src="@drawable/ic_like" />

            <ImageView
                android:id="@+id/heartImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/ic_love" />
            <ImageView
                android:id="@+id/surpriseImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/surprise_img" />

            <ImageView
                android:id="@+id/happyImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/ic_laugh" />

            <ImageView
                android:id="@+id/angryImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_margin="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_angry" />

            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp"
                android:gravity="center|center_vertical"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_gravity="center|center_vertical"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

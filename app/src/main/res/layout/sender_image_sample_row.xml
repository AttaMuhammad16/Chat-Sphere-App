<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_230sdp"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_6sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/senderImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/senderImageView"
                    android:background="#3E6B6D75"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/sender_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="01:01"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/view2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/feelingCard"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/feelingCardHeight"
        android:layout_marginTop="-6dp"
        android:backgroundTint="#E3E3E3"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_gravity="center|center_vertical"
                android:src="@drawable/ic_like" />

            <ImageView
                android:id="@+id/heartImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/ic_love" />
            <ImageView
                android:id="@+id/surpriseImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/surprise_img" />

            <ImageView
                android:id="@+id/happyImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/ic_laugh" />

            <ImageView
                android:id="@+id/angryImg"
                android:layout_width="@dimen/feelingImageSize"
                android:layout_height="@dimen/feelingImageSize"
                android:layout_margin="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_angry" />

            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp"
                android:gravity="center|center_vertical"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_gravity="center|center_vertical"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_receiver"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_230sdp"
                android:layout_margin="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/receiverThumbnailImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_13sdp"
                        android:background="#3E6B6D75"
                        app:layout_constraintBottom_toBottomOf="@+id/receiverThumbnailImageView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/receiver_timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/_1sdp"
                        android:text="01:01"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/view2" />

                    <ImageView
                        android:id="@+id/playImg"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:elevation="@dimen/_10sdp"
                        android:src="@drawable/baseline_play_arrow_24"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/receiverThumbnailImageView"
                        app:tint="@color/white" />


                    <ImageView
                        android:id="@+id/downloadFileImg"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:elevation="@dimen/_10sdp"
                        android:src="@drawable/baseline_file_download_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/receiverThumbnailImageView"
                        app:tint="@color/white" />

                    <ProgressBar
                        android:id="@+id/circularProgressIndicator"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/receiverThumbnailImageView"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:elevation="@dimen/_10sdp"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/cement"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/receiverThumbnailImageView" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/feelingLinear"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:gravity="start"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="-5dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/likeImg"
            android:layout_width="@dimen/feelingImageSize"
            android:layout_height="@dimen/feelingImageSize"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:src="@drawable/ic_like" />

        <ImageView
            android:id="@+id/heartImg"
            android:layout_width="@dimen/feelingImageSize"
            android:layout_height="@dimen/feelingImageSize"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/ic_love" />

        <ImageView
            android:id="@+id/surpriseImg"
            android:layout_width="@dimen/feelingImageSize"
            android:layout_height="@dimen/feelingImageSize"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/surprise_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/happyImg"
            android:layout_width="@dimen/feelingImageSize"
            android:layout_height="@dimen/feelingImageSize"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/ic_laugh" />

        <ImageView
            android:id="@+id/angryImg"
            android:layout_width="@dimen/feelingImageSize"
            android:layout_height="@dimen/feelingImageSize"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/ic_angry" />

        <TextView
            android:id="@+id/countTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>
</LinearLayout>

<!-- res/drawable/rounded_rectangle.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background color of the rectangle -->
    <solid android:color="@color/white" />

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="@dimen/_20sdp" />

    <stroke
        android:width="2dp"
        android:color="@color/white" />
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />

</shape>
